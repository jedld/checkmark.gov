<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SectorSelectActivity" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/header_background"
        android:orientation="vertical" >
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@color/persian_green" >

                <TextView
                    android:id="@+id/textViewSocialServices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="SOCIAL SERVICES"
                    android:textColor="@color/white"
                    android:textSize="36sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@color/shakespear" >

                <TextView
                    android:id="@+id/textViewEconomicServices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ECONOMIC SERVICES"
                    android:textColor="@color/white"
                    android:textSize="36sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@color/cinnabar" >

                <TextView
                    android:id="@+id/textViewDebtBurden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="DEBT BURDEN"
                    android:textColor="@color/white"
                    android:textSize="36sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@color/london_hue" >

                <TextView
                    android:id="@+id/textViewPublicServices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="GENERAL PUBLIC SERVICES"
                    android:textColor="@color/white"
                    android:textSize="36sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@color/sunglow" >

                <TextView
                    android:id="@+id/textViewDefence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="DEFENSE"
                    android:textColor="@color/white"
                    android:textSize="36sp" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
